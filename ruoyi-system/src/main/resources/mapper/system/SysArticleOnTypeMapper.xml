<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.system.mapper.SysArticleOnTypeMapper">
    
    <resultMap type="SysArticleOnType" id="SysArticleOnTypeResult">
        <result property="id"    column="id"    />
        <result property="typeId"    column="type_id"    />
        <result property="articleId"    column="article_id"    />
    </resultMap>

    <sql id="selectSysArticleOnTypeVo">
        select id, type_id, article_id from sys_article_on_type
    </sql>

    <select id="selectSysArticleOnTypeList" parameterType="SysArticleOnType" resultMap="SysArticleOnTypeResult">
        <include refid="selectSysArticleOnTypeVo"/>
        <where>  
            <if test="typeId != null "> and type_id = #{typeId}</if>
            <if test="articleId != null "> and article_id = #{articleId}</if>
        </where>
    </select>
    
    <select id="selectSysArticleOnTypeById" parameterType="String" resultMap="SysArticleOnTypeResult">
        <include refid="selectSysArticleOnTypeVo"/>
        where id = #{id}
    </select>
        
    <insert id="insertSysArticleOnType" parameterType="SysArticleOnType" useGeneratedKeys="true" keyProperty="id">
        insert into sys_article_on_type
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="typeId != null">type_id,</if>
            <if test="articleId != null">article_id,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="typeId != null">#{typeId},</if>
            <if test="articleId != null">#{articleId},</if>
         </trim>
    </insert>

    <update id="updateSysArticleOnType" parameterType="SysArticleOnType">
        update sys_article_on_type
        <trim prefix="SET" suffixOverrides=",">
            <if test="typeId != null">type_id = #{typeId},</if>
            <if test="articleId != null">article_id = #{articleId},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteSysArticleOnTypeById" parameterType="String">
        delete from sys_article_on_type where id = #{id}
    </delete>

    <delete id="deleteSysArticleOnTypeByIds" parameterType="String">
        delete from sys_article_on_type where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

</mapper>